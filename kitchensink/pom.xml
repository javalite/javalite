            <id>ipsolutions_repo</id>
            <name>Ipsolutionsdev Maven Plugin Repository</name>
            <url>http://ipsolutionsdev.com/snapshots/</url>
        </pluginRepository>
        <pluginRepository>
            <id>ipsolutions_repo_snapshots</id>
            <name>Ipsolutionsdev Maven Plugin Repository</name>
            <url>http://ipsolutionsdev.com/snapshots/</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>warn</checksumPolicy>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>


 <distributionManagement>
